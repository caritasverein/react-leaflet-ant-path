{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "eqeqeq": "error",
    "quotes": ["error", "double"],
    "max-len": [1, 100, 2, {"ignoreComments": true}],
    "curly": ["error", "all"],
    "brace-style": [2, "stroustrup"]
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["react"],
  "globals": {
    "L": true
  },
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true,
    "phantomjs": true,
    "jasmine": true,
    "node": true
  }
}